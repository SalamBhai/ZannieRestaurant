@model UpdateTreatRequestModel

@{
    Layout = "~/Views/Shared/_AdministratorLayout.cshtml";
    ViewData["Title"] = "Admin";
}
<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:blue"> Update Treat</h1>
                    <p class="tagcolor" style="color:green">Provide information of the treat</p>
                    <hr class="tagcolor" style="color:yellowishgreen">

                </div>
                <form asp-action="UpdateTreat">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">

                        <div class="form-group col-sm-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group col-sm-6">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="NumberofTreatsInPack" class="control-label"></label>
                            <input asp-for="NumberofTreatsInPack" class="form-control" />
                            <span asp-validation-for="NumberofTreatsInPack" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Update" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
