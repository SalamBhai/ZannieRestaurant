@model ViewCategoryRequestModel
@{
 Layout="~/Views/Shared/_AdministratorLayout.cshtml";
  ViewData["Title"] = "Admin";
}
<h4>Are you sure you want to delete this Category Off The Store?</h4>

<div style="font-size: 100%;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date Of Creation:
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfCreation
        </dd>
        <dt class="col-sm-2">
            Category:
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        
    </dl>

    <form asp-action="DeleteCategory">
        <input type="submit" value="Delete Category" class="btn btn-danger" /> 
    </form>
</div>