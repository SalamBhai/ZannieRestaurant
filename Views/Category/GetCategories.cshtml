@model IEnumerable<ViewCategoryRequestModel>
@{
    Layout="~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Categories";
}
<div class="card-header" style="background-color:DodgerBlue">
    <div class="card-title">
        <h1 class="text-center">Our Categories </h1>
    </div>
</div>
@foreach(var category in @Model)
{
  <dl class="row">
    <dt class="col-sm-2">
        Name:
    </dt>
    <dd class="col-sm-10">
        @category.CategoryName
    </dd>
   
   <dt class= "col-sm-2">
       Date Of Creation
   </dt>
   <dd class= "col-sm-10">
       @category.DateOfCreation
   </dd>      
  </dl>
}
