@model UpdateCategoryRequestModel
@{
 Layout="~/Views/Shared/_AdministratorLayout.cshtml";
  ViewData["Title"] = "Admin";
}
<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:midnightblue"> Update </h1>
                    <p class="tagcolor" style="color:green">Provide information for update of  the category</p>
                    <hr class="tagcolor" style="color:midnightblue">

                </div>
                <form asp-action="UpdateCategory">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">

                        <div class="form-group col-sm-6">
                            <label asp-for="CategoryName" class="control-label"></label>
                            <input asp-for="CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="DateOfCreation" class="control-label"></label>
                            <input asp-for="DateOfCreation" class="form-control" />
                            <span asp-validation-for="DateOfCreation" class="text-danger"></span>
                        </div>
                        

                    </div>


                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Update" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

  @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
